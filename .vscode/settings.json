{
    "files.exclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
    },
    "search.exclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/dist/**": true,
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/dist/**": true,
    },
    "python.formatting.provider": "black",
    "python.testing.pytestEnabled": false,
    "python.testing.pytestArgs": [
        "test_*.py",
        "-v",
        "-s",
    ],
}
