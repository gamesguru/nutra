{
    "python.testing.pytestEnabled": true,
    "files.exclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/.vscode/**": true,
        "**/dist/**": true,
        "MANIFEST": true,
	"MANIFEST.in": true,
    },
    "search.exclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/dist/**": true,
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/dist/**": true,
    },
    "python.formatting.provider": "black",
}
